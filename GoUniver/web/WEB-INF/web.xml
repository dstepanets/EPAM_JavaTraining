	<filter>
		<filter-name>localeFilter</filter-name>
		<filter-class>go.univer.filters.LocaleFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>localeFilter</filter-name>
		<url-pattern>/*</url-pattern>
